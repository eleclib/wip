

(defrule
    (building-type-count-total castle > 0) ; fast castle drop
    (building-type-count-total town-center < 5)
    (can-build town-center)
    =>
    (build town-center) ; max town size   
)


(defrule
    (up-pending-objects c: town-center > 0)
    =>
    (up-assign-builders c: town-center-foundation c: 3)
)

