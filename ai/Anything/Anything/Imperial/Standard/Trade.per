

(defrule
    (current-age == imperial-age)
    (player-in-game any-ally)
    (unit-type-count-total trade-cart < 40)
    (can-train trade-cart)
    =>
    (train trade-cart)
)




(defrule
    (current-age == imperial-age)
    (wood-amount < 100)
    (gold-amount > 2000)
    (can-buy-commodity wood)
    =>
    (buy-commodity wood)
)

(defrule
    (current-age == imperial-age)
    (food-amount < 100)
    (gold-amount > 2000)
    (can-buy-commodity food)
    =>
    (buy-commodity food)
)

